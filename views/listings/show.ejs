<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">

        <!-- Listing Title -->
        <h3 class="text-center mb-4" style="color:#333;">
            <%= listing.title %>
        </h3>

        <!-- Listing Card -->
        <div class="card p-4 listing-card rounded shadow-sm text-center" style="background-color:#fff;">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing_image"
                style="width:100%; max-width:400px; border-radius:10px; margin-bottom:20px;" />

            <p style="text-align: left; font-style: italic;">Owned by -
                <%= listing.owner ? listing.owner.username : "Unknown Owner" %>
            </p>

            <p style="text-align: left; color: #555;">
                <%= listing.description %>
            </p>

            <p style="text-align: left; color: green;">
                &#8377; <%= listing.price.toLocaleString("en-IN") %>
            </p>

            <p style="text-align: left; color: #007bff;">
                <%= listing.location %>
            </p>

            <p style="text-align: left; color: #17a2b8;">
                <%= listing.country %>
            </p>

            <!-- Edit & Delete Buttons (only for listing owner) -->
            <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="/listings/<%= listing._id %>/edit" class="flex-1 text-center px-3 py-2"
                    style="background: linear-gradient(to right, #222, #555); color:white; text-decoration:none; border-radius:6px; font-weight:600; flex:1 1 120px; transition: all 0.3s;">
                    Edit Listing
                </a>

                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="flex-1"
                    style="flex:1 1 120px;">
                    <button type="submit" class="w-100 px-3 py-2"
                        style="background:#ff4d4d; color:white; border:none; border-radius:6px; cursor:pointer; font-weight:600; transition: all 0.3s;">
                        Delete Listing
                    </button>
                </form>
            </div>
            <% } %>
        </div>

        <!-- Review Form (only for logged-in users) -->
        <% if(currUser) { %>
        <div class="col-12 mx-auto mb-4 p-4 border rounded shadow-sm mt-4"
            style="background-color:#fff; max-width:900px;">
            <hr>
            <h4 class="text-center mb-3" style="color:#333;">Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

                <!-- Rating using star radio buttons -->
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" checked />
                        <label for="first-rate1" title="Terrible - 1 star">1 star</label>

                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good - 2 stars">2 stars</label>

                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average - 3 stars">3 stars</label>

                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good - 4 stars">4 stars</label>

                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing - 5 stars">5 stars</label>
                    </fieldset>
                </div>

                <!-- Comment -->
                <div class="mb-3">
                    <label for="comment" class="form-label fw-bold">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="4" class="form-control"
                        placeholder="Write your review here..." required
                        style="resize:none; background-color:#fff; font-size: 1rem; padding: 8px;"></textarea>
                    <div class="invalid-feedback">Please add some comment for reviews</div>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-dark px-5 py-2"
                        style="border-radius:25px; font-size: 1rem;">Submit</button>
                </div>
            </form>
        </div>
        <% } %>

        <hr />

        <!-- All Reviews -->
        <% if(listing.reviews.length > 0) { %>
        <div class="row">
            <p><b>All reviews</b></p>
            <% for (let review of listing.reviews) { %>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        @<%= review.author.username %>
                    </h5>
                    <p class="starability-result card-text" data-rating="<%= review.rating %>">
                        <%= review.rating %> stars
                    </p>
                    <p class="card-text">
                        <%= review.comment %>
                    </p>

                    <!-- Delete review button (only for review author) -->
                    <% if(currUser && review.author && review.author._id.equals(currUser._id)) { %>
                    <form class="mb-3" method="POST"
                        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>
        <% } %>

    </div>
