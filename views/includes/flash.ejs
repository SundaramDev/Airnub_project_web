<% if (success && success.length) { %>
<div 
    class="alert alert-success alert-dismissible fade show col-6 offset-3" 
    role="alert"
    style="
        margin-top: 20px; 
        padding: 15px; 
        font-size: 16px; 
        font-weight: 500; 
        text-align: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1); 
        border-radius: 10px;
        background-color: #d4edda;
        color: #155724;
    "
>
    <%= success %>
    <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
        style="float: right;"
    ></button>
</div>
<% } %>

<% if (error && error.length) { %>
<div 
    class="alert alert-danger alert-dismissible fade show col-6 offset-3" 
    role="alert"
    style="
        margin-top: 20px; 
        padding: 15px; 
        font-size: 16px; 
        font-weight: 500; 
        text-align: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1); 
        border-radius: 10px;
        background-color: #f8d7da;
        color: #721c24;
    "
>
    <%= error %>
    <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
        style="float: right;"
    ></button>
</div>
<% } %>
